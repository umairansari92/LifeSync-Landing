          <div className="flex flex-wrap gap-4 text-slate-400 text-sm">
            <div className="flex items-center gap-2">
              <User size={16} />
              {post.author}
            </div>
            <div className="flex items-center gap-2">
              <Calendar size={16} />
              {post.date}
            </div>
            <span>{post.readTime}</span>
          </div>
        </div>
      </div>

      {/* Content */}
      <div className="max-w-4xl mx-auto px-4 py-12">
        <article className="prose prose-invert max-w-none mb-12">
          <div
            className="text-slate-300 space-y-6"
            dangerouslySetInnerHTML={{
              __html: post.content
                .split("\n")
                .map((line: string) => {
                  // Headers
                  if (line.startsWith("## ")) {
                    return `<h2 class="text-2xl font-bold text-white mt-8 mb-4">${line.slice(3)}</h2>`;
                  }
                  if (line.startsWith("# ")) {
                    return `<h1 class="text-3xl font-bold text-white mt-8 mb-4">${line.slice(2)}</h1>`;
                  }
                  // Paragraphs with formatting
                  if (line.trim()) {
                    return `<p class="leading-relaxed">${line
                      .replace(/\*\*(.*?)\*\*/g, "<strong class='text-amber-300'>$1</strong>")
                      .replace(/\*(.*?)\*/g, "<em>$1</em>")}</p>`;
